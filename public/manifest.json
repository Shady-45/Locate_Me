{
  "manifest_version": 3,
  "name": "Locate Me!",
  "version": "1.0.0",
  "description": "Locate me allows you to easily discover your current city and country by clicking its icon.",
  "icons": {
    "16": "location.png",
    "48": "location.png",
    "128": "location.png"
  },
  "action": {
    "default_icon": {
      "16": "location.png",
      "24": "location.png",
      "32": "location.png"
    },
    "default_title": "Locate Me!",
    "default_popup": "index.html"
  },
  "permissions": [
    "geolocation"
  ]
}
